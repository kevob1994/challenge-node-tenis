{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "public/dist/**"
      ]
    },
    "dev": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
